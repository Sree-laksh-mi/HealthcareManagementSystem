@model IEnumerable<HealthcareManagementSystem.Models.DrugHouse>

<div class="table-responsive">
    <table class="table table-striped text-center text-dark">
        <thead class="thead-light">
            <tr>
                <th scope="col">
                    No
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.ManufactureDate)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.ExpiryDate)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.StockLeft)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{ var i = 0;}
            @foreach (var item in Model)
            {
                i++;
                <tr class="table-info">
                    <td>
                        @i
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @item.ManufactureDate.Month/@item.ManufactureDate.Year
                    </td>
                    <td>
                        @item.ExpiryDate.Month/@item.ExpiryDate.Year
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StockLeft)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a href="/Admin/EditStock/@item.DrugId" class="btn-warning btn-sm"><i class="fa fa-edit"></i> Edit</a>
                    </td>
                </tr>
                
            }
        </tbody>
    </table>
</div>
