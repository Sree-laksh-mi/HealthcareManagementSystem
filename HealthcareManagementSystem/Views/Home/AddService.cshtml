@model HealthcareManagementSystem.Models.Service

@{
    ViewBag.Title = "AddService";
}

<h2>AddService</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @{
        if (ViewBag.Status != null)
        {
            <div class="alert alert-@ViewBag.Status alert-dismissible fade show w-50" role="alert">
                @ViewBag.Message
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    }
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-row">
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.PId, "Patient Name")
            @Html.DropDownListFor(model => model.PId, new SelectList(ViewBag.PatientList, "PId", "PatientName"), "Select a Name", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.TestName)
            @Html.DropDownListFor(model => model.TestName, new List<SelectListItem>
            {
                new SelectListItem{Text="X-Ray",Value="X-Ray"},
                new SelectListItem{Text="MRI Scan",Value="MRI Scan"},
                new SelectListItem{Text="Blood Test",Value="Blood Test"},
                new SelectListItem{Text="Admit in Bed",Value="Admit in Bed"},
                new SelectListItem{Text="CT Scan",Value="CT Scan"},
                new SelectListItem{Text="Ultrasound",Value="Ultrasound"},
                new SelectListItem{Text="OT",Value="OT"},
                new SelectListItem{Text="Minor OT",Value="Minor OT"},
                new SelectListItem{Text="Covid-19 Test",Value="Covid-19 Test"},
                new SelectListItem{Text="Chemo",Value="Chemo"},
                new SelectListItem{Text="Antibody test",Value="Antibody test"},
                new SelectListItem{Text="Treadmill test",Value="Treadmill test"},
                new SelectListItem{Text="Angiogram",Value="Angiogram"},
                new SelectListItem{Text="Thyroid test",Value="Thyroid test"},
                new SelectListItem{Text="Diabetes test",Value="Diabetes test"},
                new SelectListItem{Text="EEG",Value="EEG"},
                new SelectListItem{Text="EMG",Value="EMG"},
                new SelectListItem{Text="ECG",Value="ECG"}
            }, "Select A Service", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TestName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.Quantity)
            @Html.TextBoxFor(model => model.Quantity,  new { @class = "form-control" ,@Value="1",@type="number"} )
            @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.Price)
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="buton"></label>
            <input type="submit" value="Add" class="btn btn-info form-control" id="buton" />
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
