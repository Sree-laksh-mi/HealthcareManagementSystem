@model HealthcareManagementSystem.Models.Pharmacy

@{
    ViewBag.Title = "AddMedicine";
}

<h2>AddMedicine</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @{
        if (ViewBag.Status != null)
        {
            <div class="alert alert-@ViewBag.Status alert-dismissible fade show w-50" role="alert">
                @ViewBag.Message
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    }
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-row">
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.PId, "Patient Name")
            @Html.DropDownListFor(model => model.PId, new SelectList(ViewBag.PatientList, "PId", "PatientName"), "Select a Name", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PId, "", new { @class = "text-danger" })
        </div>


        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.PharmId, "PharmId")
            @Html.DropDownListFor(model => model.PharmId, new SelectList(ViewBag.DrugList, "PharmId", "DrugHouses.Name"), "Select a medicine", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PharmId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.Quantity)
            @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control", @Value = "1", @type = "number" })
            @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
        </div>

    </div>
    <div class="form-row">

        <div class="form-group col-md-3">
            <label for="buton"></label>
            <input type="submit" value="Add" class="btn btn-info form-control" id="buton" />
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
