@model HealthcareManagementSystem.Models.Pharmastock


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h5>Add New Medicine to Pharmacy Stock</h5>
    <hr />
    @{
        if (ViewBag.Status != null)
        {
            <div class="alert alert-@ViewBag.Status alert-dismissible fade show w-50" role="alert">
                @ViewBag.Message
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    }
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group col-md-4">
        Medicine Name
            @Html.DropDownListFor(model => model.DrugId, Session["DropDown"] as SelectList, "Select a medicine", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DrugId, "", new { @class = "text-danger" })
    </div>
    <div class="form-group col-md-4">
        @Html.LabelFor(model => model.Stockleft,"Quantity")
            @Html.EditorFor(model => model.Stockleft, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Stockleft, "", new { @class = "text-danger" })
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Medicine" class="btn btn-info" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
